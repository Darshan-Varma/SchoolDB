
@{
    ViewBag.Title = "New";
}
@section scripts{
    <script type="text/javascript">
            var formHandle = document.forms.CreateTeacher;
            formHandle.onsubmit = processForm;

            function processForm() {
                var teacherFname = formHandle.TeacherFname.value;
                var teacherLname = formHandle.TeacherLname.value;
                var employeeNumber = formHandle.EmployeeNumber.value;
                var hireDate = formHandle.HireDate.value;
                var salary = formHandle.TeacherSalary.value;

                if (teacherFname === "") {
                    formHandle.TeacherFname.style.border = "3px solid red";
                    formHandle.TeacherFname.focus();
                    return false;
                }
                else {
                    formHandle.TeacherFname.style.border = "thin solid black";
                }

                if (teacherLname === "") {
                    formHandle.TeacherLname.style.border = "3px solid red";
                    formHandle.TeacherLname.focus();
                    return false;
                }
                else {
                    formHandle.TeacherLname.style.border = "thin solid black";
                }

                if (employeeNumber === "") {
                    formHandle.EmployeeNumber.style.border = "3px solid red";
                    formHandle.EmployeeNumber.focus();
                    return false;
                }
                else {
                    formHandle.EmployeeNumber.style.border = "thin solid black";
                }

                if (hireDate === "") {
                    formHandle.HireDate.style.border = "3px solid red";
                    formHandle.HireDate.focus();
                    return false;
                }
                else {
                    formHandle.HireDate.style.border = "thin solid black";
                }

                if (salary === "") {
                    formHandle.TeacherSalary.style.border = "3px solid red";
                    formHandle.TeacherSalary.focus();
                    return false;
                }
                else {
                    formHandle.TeacherSalary.style.border = "thin solid black";
                }
            }
    </script>
    }

    <div id="containershow">
        <nav>
            <a class="navlink" href="/Teacher/List">Back To Teachers</a>
        </nav>
        <h2>New Teacher</h2>
        <form method="POST" action="/Teacher/Create" name="CreateTeacher" class="AddTeacherForm">
            <div class="inputrow">
                <label for="TeacherFname">First Name:</label>
                <input type="text" id="TeacherFname" name="TeacherFname" />

            </div>
            <div class="inputrow">
                <label for="TeacherLname">Last Name:</label>
                <input type="text" id="TeacherLname" name="TeacherLname" />

            </div>
            <div class="inputrow">
                <label for="EmployeeNumber">Employee Number:</label>
                <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
            </div>
            <div class="inputrow">
                <label for="HireDate">Hire Date:</label>
                <input type="date" id="HireDate" name="HireDate" />
            </div>
            <div class="inputrow">
                <label for="TeacherSalary">Teacher Salary:</label>
                <input type="text" id="TeacherSalary" name="TeacherSalary" />
            </div>
            <div class="inputrow">
                <input type="submit" value="Create Teacher" />
            </div>
        </form>
    </div>
